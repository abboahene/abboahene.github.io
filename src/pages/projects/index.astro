---
import Layout from "../../layouts/Layout.astro";
import Card from "../../components/Card.astro";

import projects from "./../../util/projects.db";
---

<Layout title="âœŠ|Projects">
  <section class="cards mb-16">
    <h2 class="text-md font-semibold mt-4 md:mt-8 mb-4">Projects</h2>
    <ul role="list" class="grid md:grid-cols-2 gap-3">
        {
          projects.map((project) => (
            <Card
              title={project.title}
              body={project.description}
              image={project.image}
              url={project.url}
