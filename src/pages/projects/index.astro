---
import Layout from "../../layouts/Layout.astro";
import Card from "../../components/Card.astro";

import projects from "./../../util/projects.db";
---

<Layout title="âœŠ|Articles">
  <section class="articles mb-16">
    <h2 class="text-md font-semibold mt-8 mb-4">Projects</h2>
    <div
      class="mx-auto flex max-w-2xl gap-x-8 gap-y-4 lg:max-w-none lg:grid-cols-1"
    >
      <ul role="list" class="grid grid-cols-2 gap-3">
        {
          projects.map((project) => (
            <Card
              title={project.title}
              body={project.description}
              image={project.image}
              url={project.url}
              githubUrl={project.githubUrl}
            />
          ))
        }
      </ul>
      <!-- More posts... -->
    </div>
  </section>
</Layout>
