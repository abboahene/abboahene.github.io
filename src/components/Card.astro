---
interface Props {
  title: string;
  body: string;
  image: string;
  href: string;
}

const { href, title, body, image } = Astro.props;
---

<li class="border w-full bg-white hover:shadow-md rounded-xl">
  <div class="p-4 gap-4">
    <h2 class="font-bold text-base border-b pb-2">{title}</h2>
    <div class="flex flex-row gap-2 pt-3">
      <div class="flex flex-col gap-2 justify-between">
        <p class="text-sm">{body}</p>
        <button class="w-1/6 bg-[#dedede] rounded-md font-semibold p-1">Open</button>
      </div>
      <figure class="basis-2/6">
        <img src={image} alt="img" class="rounded-xl" />
      </figure>
    </div>
  </div>
</li>
